<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">


    <ImageButton
        android:id="@+id/closeDialogFragmentButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="25dp"
        android:background="@color/black"
        android:src="@drawable/close_icon_white" />

    <TextView
        android:id="@+id/fingerprintHelpText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:gravity="center"
        android:text="@string/loginFingerprintText" />

    <ImageView
        android:id="@+id/fingerprintImageView"
        android:layout_width="139dp"
        android:layout_height="152dp"
        android:layout_centerInParent="true"
        android:src="@drawable/finger_pring_red" />

</RelativeLayout>
